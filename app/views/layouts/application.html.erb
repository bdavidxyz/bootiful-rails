<% is_minimal = request.path_info.in?(['/login', '/signup']) %>

<!DOCTYPE html>
<html>
  <head>
    <title>BootifulRails</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>

    <link rel="icon" href="data:,">
  </head>

  <body class="site <%= is_minimal ? 'bg-light' : '' %>">

    <%= render 'shared/site_nav' unless is_minimal %>

    <main>
      <%= yield %>
    </main>

    <%= render 'shared/footer' unless is_minimal %>
    
  </body>
</html>
